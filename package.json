{
  "name": "strtransformjs",
  "version": "1.0.0",
  "description": "Client-side string/texto render, wikitext abd react compatibility, expandable with l√°tex, markdown and more.",
  "main": "build/src/stratransform.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --p .",
    "compile": "tsc",
    "compile1": "cross-env-shell babel $INIT_CWD -d $INIT_CWD --extensions '.ts' --no-comments --source-maps",
    "typecheck-compile": "npm run typecheck && npm run compile",
    "treatjs": "concurrently \"npm run minify\" \"npm run prettier_dist\"",
    "prettier_dist": "prettier --write \"dist\"",
    "watch": "tsc-watch --onSuccess \"npm run minify\"",
    "server": "lite-server --baseDir=",
    "copy": "cpx -w -f \"src/**\" \"build/src/\" -p --ignore \"*.ts\"",
    "copy_tests": "cpx -w -f \"tests/**\" \"build/tests/\" -p --ignore \"*.ts\"",
    "clean_folder": "rimraf \"build/\" -I",
    "start": "concurrently \"npm run clean_folder\" \"npm run copy_tests\" \"npm run copy\" \"npm run watch\" \"npm run server\"",
    "minify": ""

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JeanCarloEM/strtransformjs.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JeanCarloEM/strtransformjs/issues"
  },
  "homepage": "https://strtransformjs.jcem.pro",
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "babel-minify": "^0.5.2",
    "concurrently": "8.2.0",
    "cpx2": "^5.0.0",
    "cross-env": "^7.0.3",
    "lite-server": "^2.6.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "tsc-hooks": "^1.1.2",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "rollup": "^3.26.3",
    "terser": "^5.19.2"
  }
}
