{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "module": "esnext",
    "declaration": true,
    "alwaysStrict": true,
    "lib": [
      "es6",
      "dom",
      "webworker"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"

  ],
  "hooks": [ "copy-files" ]
}